    <style name="TextAppearance.Button.Default" parent="TextAppearance.AvenirHeavy">
        <item name="android:textColor">@color/button_default_text</item>
        <item name="android:textSize">@dimen/button_default_text_size</item>
    </style>

    <style name="TextAppearance.Button" parent="TextAppearance.AvenirHeavy" />

    <style name="TextAppearance.Button.Thick" parent="TextAppearance.AvenirHeavy.Big" />

    <style name="TextAppearance.Button.Thin" parent="TextAppearance.AvenirMedium" />

    <style name="TextAppearance.Button.Text" parent="TextAppearance.AvenirBlack" />

    <style name="TextAppearance.Button.Filter.Label" parent="TextAppearance.AvenirMedium.Tiny" />

    <style name="TextAppearance.Button.Filter.Value" parent="TextAppearance.AvenirMedium" />

    <style name="TextAppearance.Button.Link" parent="TextAppearance.AvenirMedium.Big" />

    <!-- Buttons -->




    <!-- Banners -->

    <style name="TextAppearance.Banner.Title" parent="TextAppearance.AvenirBlack" />

    <style name="TextAppearance.Banner.Subtitle" parent="TextAppearance.AvenirRoman" />

    <!-- Misc TextViews -->

    <style name="TextAppearance.Disclaimer" parent="TextAppearance.AvenirRoman.Tiny" />


