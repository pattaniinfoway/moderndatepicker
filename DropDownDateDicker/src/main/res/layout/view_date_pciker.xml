<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="3"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="150dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_birthday"
                style="@style/Widget.dropdowndatepicker.TextView.Form.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginEnd="@dimen/tiny_margin"
                android:labelFor="@id/et_form_value"
                android:maxLines="1"
                android:textSize="@dimen/font_12"
                android:text="@string/birthday_lable"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginEnd="0dp"
                tools:ignore="LabelFor"
                />


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_months"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_box_hieght"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:entries="@array/gender"
                android:layout_gravity="end"
                android:background="@drawable/bg_form_rounded_edit_text"
                tools:listitem="@layout/simple_list_item_1"
                android:popupBackground="@color/white"
                android:spinnerMode="dropdown"
                android:textSize="@dimen/font_16"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Widget.dropdowndatepicker.TextView.Form.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginEnd="@dimen/tiny_margin"
                android:labelFor="@id/et_form_value"
                android:maxLines="1"
                android:textSize="@dimen/font_12"
                android:text="@string/gender_lable"
                android:textColor="@color/black"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginEnd="0dp"
                tools:ignore="LabelFor"
                />


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_days"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_box_hieght"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:entries="@array/gender"
                android:layout_gravity="end"
                android:background="@drawable/bg_form_rounded_edit_text"
                tools:listitem="@layout/simple_list_item_1"
                android:popupBackground="@color/white"
                android:spinnerMode="dropdown"
                android:textSize="@dimen/font_16"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/dimen_12dp"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Widget.dropdowndatepicker.TextView.Form.Label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_5dp"
                android:layout_marginEnd="@dimen/tiny_margin"
                android:labelFor="@id/et_form_value"
                android:maxLines="1"
                android:textSize="@dimen/font_12"
                android:text="@string/gender_lable"
                android:textColor="@color/black"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_goneMarginEnd="0dp"
                tools:ignore="LabelFor"
                />


            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/sp_years"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_box_hieght"
                android:layout_marginTop="@dimen/dimen_8dp"
                android:layout_gravity="end"
                android:background="@drawable/bg_form_rounded_edit_text"
                tools:listitem="@layout/simple_list_item_1"
                android:popupBackground="@color/white"
                android:spinnerMode="dropdown"
                android:textSize="@dimen/font_16"
                tools:ignore="TouchTargetSizeCheck" />

        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/tv_form_bottom_message"
        style="@style/Widget.dropdowndatepicker.TextView.Form.Rounded.BottomMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/tiny_margin"
        android:layout_marginEnd="@dimen/edit_text_form_rounded_horizontal_margin"
        android:layout_marginBottom="@dimen/tiny_margin"
        android:minHeight="@dimen/text_size_mini"
        tools:text="Please enter valid zipcode." />
</LinearLayout>